
@model List<ArticleDto>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Makale Yönetimi /</span> Makaleler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <a class="btn btn-success" asp-area="Admin" asp-controller="Article" asp-action="Add" >Yeni Makale Ekle <i class="bx bx-plus"></i></a>
        <div class="table-responsive text-nowrap m-5">
          


            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                      
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                     
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                @foreach (var article in Model)
                    {
                        <tr name="@article.Id" >
                            <th>@article.Title</th>
                            <th>@article.Category.Name</th>
                            <th>@article.CreatedDate.ToShortDateString()</th>
                            <th>@article.CreatedBy</th>  
                            <th>@(article.IsDeleted ? "Pasif" : "Aktif")</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->




</div>

@section Scripts {
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}